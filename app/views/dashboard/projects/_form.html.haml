= form_for [:dashboard, @dashboard_project] do |f|
  - if @dashboard_project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dashboard_project.errors.count, "error")} prohibited this dashboard_project from being saved:"
      %ul
        - @dashboard_project.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :title
    = f.text_field :title, :class => 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, :class => 'form-control'
  .form-group
    = f.label :start_date
    = f.date_field :start_date, :class => 'form-control'
  .form-group
    = f.label :budget
    = f.text_field :budget, :class => 'form-control'
  .form-group
    = f.submit 'Save', :class => 'btn btn-default'
